/* for "buttons" node lpgpio_4(P15_4),
 *  enable receiver and software pull-up.
 */

&pinctrl_lpgpio {
	group0 {
		pinmux = < PIN_P15_4__LPGPIO >;
		read_enable = < 0x1 >;
		driver_state_control = <1>;
	};
};

&lpgpio{
	status = "okay";
};
