config SOC_FAMILY_BALLETTO
	bool "Alif Balletto family of SoC"
	select ARM
	select ARMV8_M_DSP
	select ARMV8_1_M_MVEI
	select ARMV8_1_M_MVEF
	select CPU_CORTEX_M55
	select CPU_CORTEX_M_HAS_SYSTICK
	select CPU_HAS_ARM_MPU
	select CPU_HAS_ARM_SAU
	select CPU_HAS_FPU
	select CPU_HAS_CUSTOM_FIXED_SOC_MPU_REGIONS
	select SOC_RESET_HOOK
	select BUILTIN_STACK_GUARD
	select PINCTRL
	select CLOCK_CONTROL
	select HAS_ALIF_SE_SERVICES

if SOC_FAMILY_BALLETTO

rsource "*/Kconfig"

endif # SOC_FAMILY_BALLETTO
