config RTSS_HE
	bool "RTSS_HE core"
	help
	  Enable RTSS_HE core.

config RTSS_HP
	bool "RTSS_HP core"
	help
	  Enable RTSS_HP core.

if RTSS_HP && !USE_DT_CODE_PARTITION
config FLASH_LOAD_OFFSET
	default 0x200000
endif # RTSS_HP && !USE_DT_CODE_PARTITION

config ROM_START_OFFSET
	default 0x800 if BOOTLOADER_MCUBOOT
