/dts-v1/;

#include <alif/ensemble/e8/ae822fa0e5597xx0.dtsi>
#include <alif/ensemble/common/ensemble_rtss_he.dtsi>
#include "../common/ensemble-e4-e6-e8-pinctrl.dtsi"

/ {
	compatible = "arm,alif-e8-dk-ae822fa0e5597xx0-rtss-he";
	#address-cells = <1>;
	#size-cells = <1>;

	chosen {
		zephyr,flash = &mram_storage;
		zephyr,code-partition = &slot0_partition;
		zephyr,sram = &dtcm;
		zephyr,console = &uart2;
		zephyr,shell-uart = &uart2;
	};

	aliases {
		led0 = &aled0;
		pwm-led0 = &pwm_led1_red;
		sw0 = &button0;
		watchdog0 = &wdog0;
	};

	leds {
		compatible = "gpio-leds";

		aled0: led_0 {
			gpios = <&gpio6 4 0>;
			label = "LED1_G";
		};
	};

	pwmleds {
		compatible = "pwm-leds";

		pwm_led1_red: pwm_led_1 {
			pwms = <&pwm5 0 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
			label = "RED PWM LED 1";
		};
	};

	buttons {
		compatible = "gpio-keys";

		button0: button_0 {
			gpios = < &lpgpio 4 0 >;
			label = "SW0";
		};
	};
};

&lpgpio {
	status = "okay";
};

&ospi_flash{
	compatible = "issi,xspi-flash-controller";
	reg = <0x0>;
	erase-value = <0xff>;
	num-of-sector = <32768>;
	page-size = <4096>;
	sector-size = <4096>;
	write-block-size = <1>;

	/* Flash Size 128MB */
	#address-cells = <1>;
	#size-cells = <1>;

	flash_storage: flash_storage@0 {
		compatible = "soc-nv-flash";
		reg = <0x0 DT_SIZE_M(128)>;
		erase-block-size = <DT_SIZE_K(4)>;
		write-block-size = <1>;
	};
};

&gpio6 {
	status = "okay";
};

&uart2 {
	status = "okay";
};

&utimer5 {
	status = "okay";

	pwm5: pwm {
		pinctrl-0 = < &pinctrl_ut5 >;
		pinctrl-names = "default";
		status = "okay";
	};
};

